import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

import java.io.FileInputStream;
import java.io.IOException;
import java.util.HashMap;
import java.util.Map;

public class ExcelReader {
    private XSSFWorkbook workbook;

    public ExcelReader(String filePath) {
        try (FileInputStream fileInputStream = new FileInputStream(filePath)) {
            this.workbook = new XSSFWorkbook(fileInputStream);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    public Map<String, String> getData(String sheetName, String scenarioName) {
        Map<String, String> dataMap = new HashMap<>();
        Sheet sheet = workbook.getSheet(sheetName);

        if (sheet == null) {
            throw new RuntimeException("Sheet with name " + sheetName + " not found");
        }

        Row headerRow = sheet.getRow(0);
        if (headerRow == null) {
            throw new RuntimeException("Header row not found in sheet: " + sheetName);
        }

        int scenarioColumn = -1;
        for (int i = 0; i < headerRow.getPhysicalNumberOfCells(); i++) {
            String cellValue = getCellValue(headerRow.getCell(i));
            if (cellValue.equalsIgnoreCase("scenario")) {
                scenarioColumn = i;
                break;
            }
        }

        if (scenarioColumn == -1) {
            throw new RuntimeException("Scenario column not found in sheet: " + sheetName);
        }

        for (int rowIndex = 1; rowIndex <= sheet.getLastRowNum(); rowIndex++) {
            Row row = sheet.getRow(rowIndex);
            if (row == null) continue;

            Cell scenarioCell = row.getCell(scenarioColumn);
            if (scenarioCell != null && getCellValue(scenarioCell).equalsIgnoreCase(scenarioName)) {
                for (int i = 0; i < headerRow.getPhysicalNumberOfCells(); i++) {
                    String header = getCellValue(headerRow.getCell(i));
                    String value = getCellValue(row.getCell(i));
                    dataMap.put(header, value);
                }
                break;
            }
        }

        if (dataMap.isEmpty()) {
            throw new RuntimeException("Scenario: " + scenarioName + " not found in sheet: " + sheetName);
        }

        return dataMap;
    }

    private String getCellValue(Cell cell) {
        if (cell == null) {
            return ""; // Return an empty string if the cell is null
        }
        switch (cell.getCellType()) {
            case STRING:
                return cell.getStringCellValue().trim();
            case NUMERIC:
                return String.valueOf(cell.getNumericCellValue());
            case BOOLEAN:
                return String.valueOf(cell.getBooleanCellValue());
            case FORMULA:
                return cell.getCellFormula();
            default:
                return ""; // Return an empty string for other cell types
        }
    }
}

import org.apache.poi.ss.usermodel.*;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

import java.io.File;
import java.io.FileInputStream;
import java.io.IOException;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;

public class ExcelReader {

    private Workbook workbook;

    // Constructor to load the Excel file
    public ExcelReader(String filePath) {
        try {
            FileInputStream file = new FileInputStream(new File(filePath));
            workbook = new XSSFWorkbook(file);
        } catch (IOException e) {
            e.printStackTrace();
            throw new RuntimeException("Failed to load the Excel file: " + filePath);
        }
    }

    // Method to get data based on the scenario name
    public Map<String, String> getData(String scenarioName) {
        String sheetName = determineSheetName(scenarioName);
        return getDataFromSheet(sheetName, scenarioName);
    }

    // Determine the sheet name based on the scenario name
    private String determineSheetName(String scenarioName) {
        for (Sheet sheet : workbook) {
            // Check if this sheet contains the scenario name
            if (sheetContainsScenario(sheet, scenarioName)) {
                return sheet.getSheetName();
            }
        }
        throw new RuntimeException("Scenario '" + scenarioName + "' not found in any sheet.");
    }

    // Check if a given sheet contains the scenario name
    private boolean sheetContainsScenario(Sheet sheet, String scenarioName) {
        Iterator<Row> rowIterator = sheet.iterator();
        while (rowIterator.hasNext()) {
            Row row = rowIterator.next();
            Cell cell = row.getCell(0); // Assuming the scenario name is in the first column
            if (cell != null && cell.getCellType() == CellType.STRING) {
                if (cell.getStringCellValue().equalsIgnoreCase(scenarioName)) {
                    return true;
                }
            }
        }
        return false;
    }

    // Retrieve the data for the given scenario from the specified sheet
    private Map<String, String> getDataFromSheet(String sheetName, String scenarioName) {
        Sheet sheet = workbook.getSheet(sheetName);
        Map<String, String> data = new HashMap<>();

        boolean scenarioFound = false;

        for (Row row : sheet) {
            Cell firstCell = row.getCell(0);
            if (firstCell != null && firstCell.getCellType() == CellType.STRING && firstCell.getStringCellValue().equalsIgnoreCase(scenarioName)) {
                scenarioFound = true;
                for (Cell cell : row) {
                    String header = sheet.getRow(0).getCell(cell.getColumnIndex()).getStringCellValue();
                    String value = getCellValue(cell);
                    data.put(header, value);
                }
                break;
            }
        }

        if (!scenarioFound) {
            throw new RuntimeException("Scenario '" + scenarioName + "' not found in sheet '" + sheetName + "'.");
        }

        return data;
    }

    // Utility method to retrieve the value from a cell as a string
    private String getCellValue(Cell cell) {
        switch (cell.getCellType()) {
            case STRING:
                return cell.getStringCellValue();
            case NUMERIC:
                if (DateUtil.isCellDateFormatted(cell)) {
                    return cell.getDateCellValue().toString();
                } else {
                    return String.valueOf(cell.getNumericCellValue());
                }
            case BOOLEAN:
                return String.valueOf(cell.getBooleanCellValue());
            case FORMULA:
                return cell.getCellFormula();
            case BLANK:
                return "";
            default:
                return "";
        }
    }
}
